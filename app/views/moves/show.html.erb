</div>

  <script>
    var habillage = document.getElementById("habillage3");
    var button = document.querySelector('.video-move');
    var button2 = document.querySelector('#play');
    var button3 = document.querySelector('#pause');

    button2.addEventListener("click", function (event) {
      button.play()
      habillage.classList.add("d-none")
      button2.classList.add("d-none")
      button3.classList.remove("d-none")
    })
    button3.addEventListener("click", function (event) {
      button.pause()
      habillage.classList.remove("d-none")
      button3.classList.add("d-none")
      button2.classList.remove("d-none")
    })

</script>
